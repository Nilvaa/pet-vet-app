<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.Admin_home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mauve"
        android:padding="10dp"
        android:id="@+id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Home"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/paprika"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_marginLeft="310dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/log"
            android:id="@+id/log"
            android:layout_gravity="end"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/parent"
            android:layout_width="380dp"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            android:layout_weight="0.5"
            android:elevation="10dp">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_marginBottom="290dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/login"
                app:lottie_loop="true" app:lottie_speed="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/paprika"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textColor="@color/mauve"
                android:text="PET PARENTS"></TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:id="@+id/cen"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            android:layout_width="380dp"
            android:layout_height="250dp"
            android:layout_weight="0.5"
            android:elevation="10dp">



            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/user"
                android:layout_marginBottom="290dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/cen"
                app:lottie_loop="true" app:lottie_speed="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/paprika"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="50dp"
                android:textAlignment="center"
                android:textColor="@color/mauve"
                android:textSize="13dp"
                android:text="CENTERS"></TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView

            android:id="@+id/walk"
            android:layout_width="380dp"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            android:layout_weight="0.5"
            android:elevation="10dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/guide"
                android:layout_marginBottom="290dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/dogwalk"
                app:lottie_loop="true" app:lottie_speed="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/paprika"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textColor="@color/mauve"
                android:textSize="13dp"
                android:text="DOG WALKER"></TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/feed"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            android:layout_width="380dp"
            android:layout_height="250dp"
            android:layout_weight="0.5"
            android:elevation="10dp">

            <com.airbnb.lottie.LottieAnimationView

                android:layout_marginBottom="290dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/feedback"
                app:lottie_loop="true" app:lottie_speed="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/paprika"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textColor="@color/mauve"
                android:textSize="13dp"
                android:text="FEEDBACK"></TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>