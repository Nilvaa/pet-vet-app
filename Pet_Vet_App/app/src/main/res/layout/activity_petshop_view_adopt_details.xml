<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".petshop.Petshop_view_adopt_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mauve"
        android:padding="10dp"
        android:id="@+id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADOPTION DETAILS"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/paprika"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="100dp"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="30dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgei"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/pnam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/paprika"
                android:textColor="@color/mauve"
                android:text="name:"></TextView>


            <TextView
                android:id="@+id/pr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/paprika"
                android:textColor="@color/mauve"
                android:text="price"></TextView>
            <TextView
                android:id="@+id/qua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/paprika"
                android:textColor="@color/mauve"
                android:text="quantity"></TextView>
            <TextView
                android:id="@+id/tot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/paprika"
                android:textColor="@color/mauve"
                android:text="total"></TextView>
            <TextView
                android:id="@+id/acna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/paprika"
                android:textColor="@color/mauve"
                android:text="accna"></TextView>

            <TextView
                android:id="@+id/acnu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/paprika"
                android:textColor="@color/mauve"
                android:text="accnu"></TextView>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>