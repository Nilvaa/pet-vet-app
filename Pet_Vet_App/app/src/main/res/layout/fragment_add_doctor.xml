<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VeterinaryClinic.ui.Add_doctorsFragment">
    <EditText
        android:id="@+id/d_nam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/paprika"
        android:hint="Doctor's Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/mauve"
        android:textColorHint="@color/mauve" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:padding="3dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/paprika"
        android:background="@drawable/edittext"
        android:textColor="@color/mauve"
        android:textColorHint="@color/mauve" />
    <EditText
        android:id="@+id/d_lic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/paprika"
        android:hint="Medical License"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/mauve"
        android:textColorHint="@color/mauve" />

    <EditText
        android:id="@+id/d_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/paprika"
        android:hint="Contact Number"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="@color/mauve"
        android:textColorHint="@color/mauve" />
    <EditText
        android:id="@+id/d_em"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/paprika"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/mauve"
        android:textColorHint="@color/mauve" />

    <EditText
        android:id="@+id/d_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/paprika"
        android:hint="Address"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/mauve"
        android:textColorHint="@color/mauve" />
    <EditText
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/paprika"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/mauve"
        android:textColorHint="@color/mauve" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/paprika"
            android:text="Add Doctor's Photo"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/mauve"/>
        <ImageView
            android:id="@+id/add_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:src="@android:drawable/picture_frame"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/tableRow1"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cam"
                android:layout_width="46dp"
                android:layout_height="45dp"
                android:background="@drawable/camera" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>

            <ImageView
                android:id="@+id/gal"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/gallery" />


        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/btnadd"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/mauve"
        android:fontFamily="@font/paprika"
        android:padding="10dp"
        android:text="ADD"
        android:textColor="@color/white" />
</LinearLayout></ScrollView>